<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CreateAuto"
    android:background="@color/color1">

    <TextView
        android:id="@+id/main_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/alata"
        android:text="@string/PhraseOnCreate"
        android:textColor="@color/color2"
        android:textSize="28sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:id="@+id/brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_below="@id/main_text">
        <TextView
            android:id="@+id/brandText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Марка : "
            android:fontFamily="@font/alata"
            android:textColor="@color/color3"
            android:textSize="24sp"
            android:textStyle="normal"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"/>

        <EditText
            android:id="@+id/brandInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:fontFamily="@font/alata"
            android:maxLines="1"
            android:textColor="@color/color4"
            android:textColorHint="@color/grey"
            android:textColorHighlight="@color/color2"
            android:textSize="22sp"
            android:importantForAutofill="no" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_below="@id/brand">
        <TextView
            android:id="@+id/modelText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Модель : "
            android:fontFamily="@font/alata"
            android:textColor="@color/color3"
            android:textSize="24sp"
            android:textStyle="normal"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"/>

        <EditText
            android:id="@+id/modelInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:fontFamily="@font/alata"
            android:maxLines="1"
            android:textColor="@color/color4"
            android:textColorHint="@color/grey"
            android:textColorHighlight="@color/color2"
            android:textSize="23sp"
            android:importantForAutofill="no" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_below="@id/model">
        <TextView
            android:id="@+id/yearText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Рік : "
            android:fontFamily="@font/alata"
            android:textColor="@color/color3"
            android:textSize="24sp"
            android:textStyle="normal"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"/>

        <EditText
            android:id="@+id/yearInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:fontFamily="@font/alata"
            android:maxLines="1"
            android:textColor="@color/color4"
            android:textColorHint="@color/grey"
            android:textColorHighlight="@color/color2"
            android:textSize="22sp"
            android:importantForAutofill="no" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fuel"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/year">

        <TextView
            android:id="@+id/fuelText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/alata"
            android:text="Вид топлива : "
            android:textColor="@color/color3"
            android:textSize="24sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/fuelInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/alata"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/color4"
            android:textColorHighlight="@color/color2"
            android:textColorHint="@color/grey"
            android:textSize="22sp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/run"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/fuel">

        <TextView
            android:id="@+id/runText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/alata"
            android:text="Пробіг : "
            android:textColor="@color/color3"
            android:textSize="24sp"
            android:textStyle="normal"
            android:layout_gravity="bottom"/>

        <EditText
            android:id="@+id/runInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/alata"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/color4"
            android:textColorHighlight="@color/color2"
            android:textColorHint="@color/grey"
            android:textSize="22sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@id/run"
        android:layout_marginLeft="227dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/color2"
        android:fontFamily="@font/alata"
        android:text="Далі"
        android:textColor="@color/color4"
        android:textSize="18sp"
        android:textStyle="bold"
        android:onClick="onClickNext"/>
</RelativeLayout>