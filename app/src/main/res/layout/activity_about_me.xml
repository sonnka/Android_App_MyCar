<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AboutMe">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/line0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:dropDownWidth="wrap_content"
                android:spinnerMode="dropdown"/>

<!--            <TextView-->
<!--                android:id="@+id/changeAuto"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:gravity="start"-->
<!--                android:fontFamily="@font/alata"-->
<!--                android:textSize="18sp"-->
<!--                android:text="Змінити авто  "-->
<!--                android:drawableEnd="@drawable/reload"/>-->

            <TextView
                android:id="@+id/Logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="end"
                android:fontFamily="@font/alata"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Вийти  "
                android:drawableEnd="@drawable/logout"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/line0"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:backgroundTint="@color/color1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/alata"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:text="Я" />

            <ImageButton
                android:id="@+id/editUser"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/color1"
                android:layout_weight="1"
                android:src="@drawable/ic_edit"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/meLine"
            android:layout_width="match_parent"
            android:layout_below="@id/user"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:background="@color/color3"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/meImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/focus"/>

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user"
                android:background="@color/color3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:textColor="@color/color1"
                    android:textSize="20sp"
                    android:text="Name" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:textColor="@color/color1"
                    android:textSize="14sp"
                    android:text="Email" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/auto"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/meLine"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:backgroundTint="@color/color1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/autoText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/alata"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="Моє авто" />

            <ImageButton
                android:id="@+id/editAuto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/color1"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:src="@drawable/ic_edit"/>

            <ImageButton
                android:id="@+id/deleteAuto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/color1"
                android:layout_weight="1"
                android:src="@drawable/ic_delete"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/autoLine"
            android:layout_width="match_parent"
            android:layout_below="@id/auto"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:background="@color/color3"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/autoImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/car"/>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/auto"
                android:background="@color/color3"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/brandModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color1"
                    android:fontFamily="@font/alata"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Brand and model" />

                <TextView
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color1"
                    android:fontFamily="@font/alata"
                    android:textSize="18sp"
                    android:text="Year" />
                <TextView
                    android:id="@+id/run"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color1"
                    android:fontFamily="@font/alata"
                    android:textSize="18sp"
                    android:text="Run" />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/autoLine"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/unique_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color1"
                android:fontFamily="@font/alata"
                android:textSize="18sp"
                android:text="Унікальний код авто : " />

            <TextView
                android:id="@+id/uniqueCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color1"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/alata"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Код" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line3"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/consumption_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/alata"
                android:text="Поточний розхід топлива : "
                android:textColor="@color/color1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fuel_consumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color1"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/alata"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="- л/км" />

        </LinearLayout>
        <LinearLayout
            android:id="@id/line5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line4"
            android:gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/alata"
                android:textSize="16sp"
                android:text="Сформовані звіти будуть відправлені на пошту, яку ви вказали при реєстрації" />

            <Button
                android:id="@+id/report1"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:textSize="17sp"
                android:text="Звіт 1" />

            <Button
                android:id="@+id/report2"
                android:layout_marginTop="5dp"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:textSize="17sp"
                android:text="Звіт 2" />

        </LinearLayout>



    </RelativeLayout>
</FrameLayout>