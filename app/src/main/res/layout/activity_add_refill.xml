<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    tools:context=".activity.AddRefill">
    <TextView
        android:id="@+id/back"
        android:layout_width="80dp"
        android:layout_marginLeft="10dp"
        android:layout_height="50dp"
        android:text="back"
        android:textSize="20dp"
        android:textStyle="bold"
        android:onClick="back"/>

    <TextView
        android:id="@+id/repair_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Заправка авто"
        android:fontFamily="@font/alata"
        android:textColor="@color/color4"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/back"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="32sp"/>
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/repair_text"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Дата : "
            android:fontFamily="@font/alata"
            android:textColor="@color/color3"
            android:textSize="23sp"
            android:textStyle="normal"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"/>

        <EditText
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ems="10"
            android:fontFamily="@font/alata"
            android:hint="Вкажіть дату..."
            android:maxLines="1"
            android:onClick="onDate"
            android:singleLine="true"
            android:textColor="@color/color4"
            android:textColorHighlight="@color/color2"
            android:textColorHint="@color/grey"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/run_text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Пробіг : "
            android:fontFamily="@font/alata"
            android:textColor="@color/color3"
            android:textSize="23sp"
            android:textStyle="normal"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"/>

        <EditText
            android:id="@+id/run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ems="10"
            android:fontFamily="@font/alata"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/color4"
            android:textColorHighlight="@color/color2"
            android:textColorHint="@color/grey"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/beforeRefill_text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Кількість палива до заправки (л) : "
            android:fontFamily="@font/alata"
            android:textColor="@color/color3"
            android:textSize="23sp"
            android:textStyle="normal"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"/>

        <EditText
            android:id="@+id/beforeRefill"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:ems="10"
            android:fontFamily="@font/alata"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/color4"
            android:textColorHighlight="@color/color2"
            android:textColorHint="@color/grey"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line3"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/addFuel_text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Залили палива (л) : "
            android:fontFamily="@font/alata"
            android:textColor="@color/color3"
            android:textSize="23sp"
            android:textStyle="normal"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"/>

        <EditText
            android:id="@+id/addFuel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:ems="10"
            android:fontFamily="@font/alata"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/color4"
            android:textColorHighlight="@color/color2"
            android:textColorHint="@color/grey"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line4"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price_text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Вартість : "
            android:fontFamily="@font/alata"
            android:textColor="@color/color3"
            android:textSize="23sp"
            android:textStyle="normal"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"/>

        <EditText
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ems="10"
            android:fontFamily="@font/alata"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/color4"
            android:textColorHighlight="@color/color2"
            android:textColorHint="@color/grey"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line5"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/station_text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="АЗС : "
            android:fontFamily="@font/alata"
            android:textColor="@color/color3"
            android:textSize="23sp"
            android:textStyle="normal"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"/>

        <EditText
            android:id="@+id/station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ems="10"
            android:fontFamily="@font/alata"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/color4"
            android:textColorHighlight="@color/color2"
            android:textColorHint="@color/grey"
            android:textSize="18sp" />
    </LinearLayout>
    <Button
        android:id="@+id/nextButton"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_below="@id/line6"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/color2"
        android:fontFamily="@font/alata"
        android:text="Додати запис"
        android:textColor="@color/color4"
        android:textSize="16sp"
        android:textStyle="bold"
        android:onClick="onClickAdd"/>


</RelativeLayout>